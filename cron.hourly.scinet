#!/bin/bash

LOGIN_NODE=login.scinet.utoronto.ca
DAEMON_NODE=datamover1

echo "=== $(date --rfc-3339=seconds) - alpenhorn cron ==="

echo -n "  Checking alpenhornd running... "
ssh $LOGIN_NODE "ssh $DAEMON_NODE alpenhorn_ensure_running.sh"

echo -n "  Queuing up new transfers... "
ssh $LOGIN_NODE "ssh $DAEMON_NODE alpenhorn node2group niedermayer scinet_online -f"
